{{# each products }}
<div class="row">
    {{# each this }}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
            <div class="caption">
                <h3>{{ this.title }}</h3>
                <p class="description">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left">
                        R$ {{ this.price }},00
                    </div>
                </div>
                <div class="clearfix">
                    <a href="/remove_product/{{this._id}}" class="btn btn-danger" role="button">Remover da Lista</a>
                    <a href="/add-cart/{{this._id}}" class="btn btn-success" role="button">Adicionar ao Carrinho</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}